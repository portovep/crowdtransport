<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coctelmental.android.project1886"
    android:versionCode="4"
    android:versionName="0.4.6" >

    <!-- C2DM service requires level 8 -->
    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- This app has permission to register and receive message -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Only this application can receive the messages and registration result -->
    <permission
        android:name="com.coctelmental.android.project1886.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.coctelmental.android.project1886.permission.C2D_MESSAGE" />

    <application
        android:name="MyApplication"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Authentication"
            android:label="@string/loginActivity_name"
            android:screenOrientation="portrait" />
        <activity android:name=".UserAuthentication" />
        <activity android:name=".TaxiDriverAuthentication" />
        <activity android:name=".BusDriverAuthentication" />
        <activity
            android:name=".Registration"
            android:screenOrientation="portrait" />
        <activity android:name=".UserRegistration" />
        <activity android:name=".TaxiDriverRegistration" />
        <activity android:name=".BusDriverRegistration" />
        <activity
            android:name=".UserBusLineSelection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserBusLocationMap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CollaboratorLineSelection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CollaboratorInformationPanel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserTaxiRouteSpecification"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserTaxiLocationMap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserTaxiRequestConfirmation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserTaxiWaitingPanel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BusDriverMain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BusDriverLineSelection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BusDriverInformationPanel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaxiDriverMain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaxiDriverInformationPanel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaxiDriverRouteView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaxiDriverRouteReminder"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaxiDriverAttendingServiceRequest"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".c2dm.C2DMRegistrationReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.coctelmental.android.project1886" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".c2dm.C2DMessageReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.coctelmental.android.project1886" />
            </intent-filter>
        </receiver>

        <service
            android:name=".TrackingService"
            android:exported="false" >
        </service>
        <service
            android:name=".tts.TextToSpeechService"
            android:exported="false" >
        </service>
    </application>

</manifest>