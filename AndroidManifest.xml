<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coctelmental.android.project1886"
    android:versionCode="2"
    android:versionName="0.4" >

    <!-- C2DM service requires level 8 -->
    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- This app has permission to register and receive message -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Only this application can receive the messages and registration result -->
    <permission
        android:name="com.coctelmental.android.project1886.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.coctelmental.android.project1886.permission.C2D_MESSAGE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="MyApplication" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/loginActivity_name"
            android:name=".Authentication" >
        </activity>
        <activity android:name=".UserAuthentication" />
        <activity android:name=".TaxiDriverAuthentication" />
        <activity android:name=".BusDriverAuthentication" />
        <activity android:name=".Registration" />
        <activity android:name=".UserRegistration" />
        <activity android:name=".TaxiDriverRegistration" />
        <activity android:name=".BusDriverRegistration" />
        <activity android:name=".UserBusLineSelection" />
        <activity android:name=".UserBusLocationMap" />
        <activity android:name=".CollaboratorLineSelection" />
        <activity android:name=".CollaboratorInformationPanel" />
        <activity android:name=".UserTaxiRouteSpecification" />
        <activity android:name=".UserTaxiLocationMap" />
        <activity android:name=".UserTaxiRequestConfirmation" />
        <activity android:name=".BusDriverMain" />
        <activity android:name=".BusDriverLineSelection" />
        <activity android:name=".BusDriverInformationPanel" />
        <activity android:name=".TaxiDriverMain" />
        <activity android:name=".TaxiDriverInformationPanel" />

        <receiver
            android:name=".c2dm.C2DMRegistrationReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.coctelmental.android.project1886" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".c2dm.C2DMessageReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.coctelmental.android.project1886" />
            </intent-filter>
        </receiver>

        <service
            android:exported="false"
            android:name=".TrackingService" >
        </service>
    </application>

</manifest>